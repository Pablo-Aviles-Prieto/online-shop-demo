<article class="product-item">
  <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
  <div class="product-item-content">
    <h2><%= product.title %></h2>
    <div class="product-item-actions">
      <!-- Since we are sharing this file to show all the products for the customer and admin page, we gonna check if the user is admin to render some certain data in that case -->
      <% if (locals.isAdmin) { %>
      <a class="btn btn-alt" href="/admin/products/<%= product.id %>">Edit</a>
      <button
        class="btn btn-alt"
        data-productid="<%= product.id %>"
        data-csrf="<%= locals.csrfToken %>"
      >
        Delete
      </button>
      <% } else { %>
        <a href="/products/<%= product.id %>" class="btn btn-alt"> View Details</a>
      <% } %>
    </div>
  </div>
</article>
